{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://janu-ecommerce-backend.onrender.com/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/admin/(.*)",
      "dest": "/admin/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "cleanUrls": true,
  "trailingSlash": false,
  "env": {
    "VITE_API_URL": "https://janu-ecommerce-backend.onrender.com/api",
    "NODE_ENV": "production"
  }
}
